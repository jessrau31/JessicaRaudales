---
const { project } = Astro.props;
const { title, category, description } = project.data;
const slug = project.slug;
---
<a 
  href={`/projects/${slug}`} 
  class="block p-8 rounded-xl bg-[#F29CB7] hover:bg-[#522A6F]/80 transition-all duration-300 group relative overflow-hidden shadow-md"
>
  <div class="absolute top-0 left-0 w-full h-1.5 bg-gradient-to-r from-[#FBCF4F] to-[#DDAAFF] opacity-60"></div>

  <div class="space-y-5 relative">
    <div class="inline-block px-3 py-1 bg-[#FAEADD]/20 rounded-full">
      <p class="text-sm font-semibold text-[#FAEADD] font-nunito uppercase tracking-wide">
        {category}
      </p>
    </div>

    <h2 class="text-2xl font-bold text-[#FAEADD] font-dosis transition-colors group-hover:text-[#FBCF4F]">
      {title}
    </h2>

    <p class="text-[#FAEADD]/90 font-nunito leading-relaxed">
      {description}
    </p>
  </div>
</a>