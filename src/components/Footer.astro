---
import { footerData } from '../content/data';
---

<footer
  id="footer"
  class="bg-[#DDAAFF] text-[#222023] py-8 md:py-12 px-4 md:px-6 rounded-t-xl border-t-4 border-[#F29CB7]"
>
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-dosis font-bold mb-6 md:mb-8">
      {footerData.title}
    </h2>
    
    <div class="flex flex-col sm:flex-row justify-center gap-6 md:gap-12 mb-6 md:mb-8">
      {footerData.contacts.map((contact) => (
        <a
          href={contact.url}
          target="_blank"
          class={`flex flex-col items-center group transition-all duration-300 ${contact.hoverColor} p-2 md:m-4`}
        >
          <i class={`${contact.icon} text-3xl md:text-4xl mb-1 md:mb-2`}></i>
          <span class="font-nunito text-xs md:text-sm">{contact.displayText}</span>
        </a>
      ))}
    </div>
    
    <div class="border-t border-[#222023]/20 pt-4 md:pt-6 mt-6 md:mt-8">
      <p class="font-dosis text-xs md:text-sm opacity-80" set:html={footerData.copyright}></p>
    </div>
  </div>
</footer>